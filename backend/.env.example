# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=portfolio_db

# Database Connection URL (for SQLAlchemy with asyncpg driver)
# Format: postgresql+asyncpg://user:password@host:port/dbname
# If not set or empty, the application will fall back to SQLite (price_cache.db)
# For production, use PostgreSQL. For development, you can leave this empty to use SQLite.
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/portfolio_db

# Application Configuration
APP_ENV=development
DEBUG=True

# Server Configuration
# Host to bind to (0.0.0.0 for all interfaces)
WS_HOST=0.0.0.0
# Port defaults to 443 when SSL is enabled, 8000 otherwise
# WS_PORT=8000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Security (generate strong secrets in production)
SECRET_KEY=your-secret-key-here-change-in-production

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://your-api-identifier

# SSL Configuration (for production HTTPS)
# Leave empty for development (HTTP) or set paths to Let's Encrypt certificates
# SSL_CERTFILE=/etc/letsencrypt/live/your-domain.com/fullchain.pem
# SSL_KEYFILE=/etc/letsencrypt/live/your-domain.com/privkey.pem
